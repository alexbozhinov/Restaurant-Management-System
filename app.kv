#: import NoTransition kivy.uix.screenmanager.NoTransition
<MainWindow>
    id: main_window

    ScreenManager:
        id: screen_manager_main
        transition: NoTransition()
        Screen:
            id: screen_welcome
            name: 'screen_welcome'
        Screen:
            id: screen_login
            name: 'screen_login'
        Screen:
            id: screen_chef_main
            name: 'screen_chef_main'
            on_enter: root.chef_entered()
        Screen:
            id: screen_waiter_main
            name: 'screen_waiter_main'
            on_enter: root.waiter_entered()
        Screen:
            id: screen_manager_main
            name: 'screen_manager_main'
            on_enter: root.manager_entered()