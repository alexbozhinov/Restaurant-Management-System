<WelcomeWindow>
    id: welcome_window
    BoxLayout:
        id: welcome_layout
        orientation: 'vertical'
        size: root.width, root.height

        padding: 30, 0, 30, 0
        spacing: 20

        BoxLayout:
            orientation: 'vertical'
            spacing: 20
            padding: 30

            Label:
                text: 'Welcome to RMS'
                bold: True
                font_size: 45
                background_color: (255/255.0, 253/255.0, 223/255.0, 1)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [58]

                color: (137/255.0, 96/255.0, 0/255.0, 1)

        BoxLayout:
            id: welcome_image_layout
            orientation: 'vertical'
            padding: 0, 0, 0, 0
            spacing: 10

            Image:
                source: root.images_store + 'RMS_welcome.png'
                allow_stretch: True
                keep_ratio: True

        BoxLayout:
            id: welcome_button_layout
            orientation: 'vertical'
            padding: 30

            RoundedButton:
                id: welcome_button
                text: 'START RMS'
                font_size: 40
                on_release:
                    root.welcome()

<RoundedButton@Button>
    background_color: (0, 0, 0, 0)
    background_normal: ''

    canvas.before:
        Color:
            rgba: (255/255.0, 205/255.0, 0/255.0, 1) if self.state == 'normal' else (255/255.0, 128/255.0, 0/255.0, 1)

        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [58]