#:import Factory kivy.factory.Factory

<sp@SpinnerOption>
    color: (137/255.0, 96/255.0, 0/255.0, 1)
    background_normal: ''
    background_color: (255/255.0, 253/255.0, 160/255.0, 1)
    font_size: 23

<LoginWindow>
    id: login_window
    BoxLayout:
        id: login_layout
        orientation: 'vertical'
        size: root.width, root.height

        padding: 20
        spacing: 10

        BoxLayout:
            orientation: 'vertical'
            padding: 20
            spacing: 10

            Label:
                text: 'Access Control'
                bold: True
                font_size: 45
                background_color: (255/255.0, 253/255.0, 223/255.0, 1)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [58]

                color: (137/255.0, 96/255.0, 0/255.0, 1)

        BoxLayout:
            id: login_inputs_layout
            orientation: 'vertical'
            padding: 20
            spacing: 10

            TextInput:
                id: email_input
                hint_text: ' Email'
                font_size: 23
                multiline: False
                background_normal: ''
                foreground_color: (137/255.0, 96/255.0, 0/255.0, 1)
                hint_text_color: (148/255.0, 129/255.0, 84/255.0, 1)
                background_color: (255/255.0, 253/255.0, 223/255.0, 1)
                focus: True
                on_text_validate: password_input.focus = True
            TextInput:
                id: password_input
                password: True
                hint_text: ' Password'
                font_size: 23
                multiline: False
                background_normal: ''
                foreground_color: (137/255.0, 96/255.0, 0/255.0, 1)
                hint_text_color: (148/255.0, 129/255.0, 84/255.0, 1)
                background_color: (255/255.0, 253/255.0, 223/255.0, 1)
                on_text_validate: root.validate_user()
            Spinner:
                id: employee_type_spinner
                text: 'Select Position'
                background_normal: ''
                background_color: (255/255.0, 253/255.0, 223/255.0, 1)
                color: (137/255.0, 96/255.0, 0/255.0, 1)
                font_size: 23
                values: ['Manager', 'Chef', 'Waiter']
                option_cls: Factory.sp

                on_text: root.employee_type_spinner_clicked(employee_type_spinner.text)
        BoxLayout:
            id: login_button_layout
            orientation: 'vertical'
            padding: 20

            RoundedButton:
                id: login_button
                text: 'LOGIN'
                bold: True
                font_size: 40
                on_release:
                    root.login_click()

<RoundedButton@Button>
    background_color: (0, 0, 0, 0)
    background_normal: ''

    canvas.before:
        Color:
            rgba: (255/255.0, 205/255.0, 0/255.0, 1) if self.state == 'normal' else (255/255.0, 128/255.0, 0/255.0, 1)

        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [58]
